{
	"Parameters": {
		"DeviceID": {
			"Type": "String"
		}
	},
	"Resources": {
		"thing": {
			"Type": "AWS::IoT::Thing",
			"Properties": {
				"ThingName": {
					"Ref": "DeviceID"
				},
				"ThingGroups": [
					"EC2"
				],
				"ThingTypeName": "ec2",
				"BillingGroup": "ec2"
			},
			"OverrideSettings": {
				"AttributePayload": "MERGE",
				"ThingGroups": "DO_NOTHING",
				"ThingTypeName": "REPLACE"
			}
		},
		"certificate": {
			"Properties": {
				"CertificateId": {
					"Ref": "AWS::IoT::Certificate::Id"
				},
				"Status": "Active"
			},
			"Type": "AWS::IoT::Certificate"
		},
		"policy": {
			"Properties": {
				"PolicyName": "Full-Access-Policy"
			},
			"Type": "AWS::IoT::Policy"
		}
	}
}