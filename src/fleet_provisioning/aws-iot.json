{
	"Parameters": {
		"DeviceID": {
			"Type": "String"
		}
	},
	"Resources": {
		"thing": {
			"Type": "AWS::IoT::Thing",
			"Properties": {
				"ThingName": {
					"Ref": "DeviceID"
				},
				"ThingGroups": [
					"aws-iot"
				],
				"ThingTypeName": "aws-iot",
				"BillingGroup": "aws-iot"
			},
			"OverrideSettings": {
				"AttributePayload": "MERGE",
				"ThingGroups": "DO_NOTHING",
				"ThingTypeName": "REPLACE"
			}
		},
		"certificate": {
			"Type": "AWS::IoT::Certificate",
			"Properties": {
				"CertificateId": {
					"Ref": "AWS::IoT::Certificate::Id"
				},
				"Status": "Active"
			}
		},
		"policy": {
			"Type": "AWS::IoT::Policy",
			"Properties": {
				"PolicyName": "aws-iot"
			}
		}
	}
}